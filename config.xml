<?xml version='1.0' encoding='utf-8'?>
<widget id="com.myezplan.xxx" version="1.0.3" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>MyEzPlan</name>
    <description>
        MyEzPlan
    </description>
    <author email="support@myezplan.com" href="http://myezplan.com">
        MyEzPlan
    </author>
    <content src="index.html" />
    <preference name="permissions" value="none" />
    <preference name="orientation" value="portrait" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="false" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="false" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />

    <preference name="disable-cursor" value="true" />
    <preference name="android-minSdkVersion" value="14" />
    <preference name="android-installLocation" value="auto" />
    
    <plugin name="org.apache.cordova.console" />
    <plugin name="org.apache.cordova.device" />
    <plugin name="org.apache.cordova.device-motion" />
    <plugin name="org.apache.cordova.device-orientation" />
    <plugin name="org.apache.cordova.dialogs" />
    <plugin name="org.apache.cordova.file" />
    <plugin name="org.apache.cordova.file-transfer" />
    <plugin name="org.apache.cordova.inappbrowser" />
    <plugin name="org.apache.cordova.media" />
    <plugin name="org.apache.cordova.network-information" />
    <plugin name="cordova-plugin-splashscreen" />

    <icon platform="android" qualifier="ldpi" src="res/icon/android/icon-36-ldpi.png" />
    <icon platform="android" qualifier="mdpi" src="res/icon/android/icon-48-mdpi.png" />
    <icon platform="android" qualifier="hdpi" src="res/icon/android/icon-72-hdpi.png" />
    <icon platform="android" qualifier="xhdpi" src="res/icon/android/icon-96-xhdpi.png" />

    <icon platform="ios" height="57" src="res/icon/ios/icon.png" width="57" />
    <icon platform="ios" height="114" src="res/icon/ios/icon-2x.png" width="114" />

    <icon platform="ios" height="72" src="res/icon/ios/icon-72.png" width="72" />
    <icon platform="ios" height="144" src="res/icon/ios/icon-72-2x.png" width="144" />
    
    <icon platform="ios" height="180" src="res/icon/ios/icon-60-3x.png" width="180" />
    <icon platform="ios" height="60" src="res/icon/ios/icon-60.png" width="60" />
    <icon platform="ios" height="120"  src="res/icon/ios/icon-60-2x.png" width="120" />
    
    <icon platform="ios" height="76" src="res/icon/ios/icon-76.png" width="76" />
    <icon platform="ios" height="152" src="res/icon/ios/icon-76-2x.png" width="152" />
    
    <icon platform="ios" height="40" src="res/icon/ios/icon-40.png" width="40"  />
    <icon platform="ios" height="80" src="res/icon/ios/icon-40-2x.png" width="80"  />
    
    <icon platform="ios" height="29"  src="res/icon/ios/icon-small.png" width="29" />
    <icon platform="ios" height="58"  src="res/icon/ios/icon-small-2x.png" width="58" />
    <icon platform="ios" height="87"  src="res/icon/ios/icon-small-3x.png" width="87" />

    <icon platform="ios" height="50" src="res/icon/ios/icon-50.png" width="50"  />
    <icon platform="ios" height="100" src="res/icon/ios/icon-50-2x.png" width="100"  />

    <splash platform="android" qualifier="ldpi" src="res/screen/android/screen-ldpi-portrait.png" />
    <splash platform="android" qualifier="mdpi" src="res/screen/android/screen-mdpi-portrait.png" />
    <splash platform="android" qualifier="hdpi" src="res/screen/android/screen-hdpi-portrait.png" />
    <splash platform="android" qualifier="xhdpi" src="res/screen/android/screen-xhdpi-portrait.png" />
    <splash platform="android" qualifier="xxhdpi" src="res/screen/android/screen-xhdpi-portrait.png" />

    <splash platform="ios" height="1024" src="res/screen/ios/screen-ipad-portrait.png" width="768" />
    <splash platform="ios" height="480" src="res/screen/ios/screen-iphone-portrait.png" width="320" />
    <splash platform="ios" height="960" src="res/screen/ios/screen-iphone-portrait-2x.png" width="640" />
    <splash platform="ios" height="1136" src="res/screen/ios/screen-iphone-portrait-568h-2x.png" width="640" />
    <splash platform="ios" height="2208" src="res/screen/ios/screen-iphone-portrait-736h.png" width="1242" />
    <splash platform="ios" height="1334" src="res/screen/ios/screen-iphone-portrait-667h.png" width="750" />
    <splash platform="ios" height="2048" src="res/screen/ios/screen-ipad-portrait-2x.png" width="1536" />

    <plugin name="cordova-plugin-whitelist" spec="1" />

    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <access origin="*"/>
    <preference name="BackupWebStorage" value="none" />
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="SplashScreen" value="splash" />
    <preference name="SplashScreenDelay" value="8000" />
    <preference name="ShowSplashScreenSpinner" value="false"/>
    <preference name="DisallowOverscroll" value="true"/>
</widget>
